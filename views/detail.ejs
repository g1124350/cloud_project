<html>
  <h1>Details</h1>
  <body>
    <ol>
      <% for (i in r) { %>
      <li>Name:<%= r[i].name%></li>
      <li>Borough:<%= r[i].borough%></li>
      <li>Cuisine:<%= r[i].cuisine%></li>
      <li>Street:<%= r[i].address.street%></li>
      <li>Building:<%= r[i].address.building%></li>
      <li>Zipcode:<%= r[i].address.zipcode%></li>
      <li>GPS Coordinates(lon.):<%= r[i].address.coord.lon%></li>
      <li>GPS Coordinates(lat.):<%= r[i].address.coord.lat%></li>
      <% } %>
      </ol>
